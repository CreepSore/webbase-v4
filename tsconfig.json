{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "declaration": false,
        "noEmit": true,
        "isolatedModules": true,
        "baseUrl": "src",
        "paths": {
            "@app/*": ["application/*"],
            "@logic/*": ["logic/*"],
            "@service/*": ["service/*"]
        }
    },
    "exclude": ["node_modules", "**/node_modules/*"],
    "include": ["src/**/*.ts", "src/**/*.js", "extensions/*.ts", "extensions/*.js"]
}