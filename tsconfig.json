{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "declaration": false,
        "noEmit": true,
        "isolatedModules": true,
        "baseUrl": "src",
        "paths": {
            "@app/*": ["application/*"],
            "@logic/*": ["logic/*"],
            "@service/*": ["service/*"],
            "@extensions/*": ["../extensions/*"]
        },
        "esModuleInterop": true,
        "jsx": "react",
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "test/**/*.ts",
        "extensions/**/*.ts",
        "extensions/**/*.tsx",
        "extensions/**/*.js",
        "extensions/**/*.jsx"
    ]
}