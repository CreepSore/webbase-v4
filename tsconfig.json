{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "declaration": false,
        "noEmit": true,
        "isolatedModules": true,
        "baseUrl": "src",
        "paths": {
            "@app/*": ["application/*"],
            "@logic/*": ["logic/*"],
            "@service/*": ["service/*"]
        },
        "jsx": "react"
    },
    "exclude": ["node_modules", "**/node_modules/*"],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "extensions/*.ts",
        "extensions/*.tsx",
        "extensions/*.js",
        "extensions/*.jsx"
    ]
}